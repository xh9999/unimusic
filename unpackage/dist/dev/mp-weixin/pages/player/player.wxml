<view class="player"><view class="normal-player"><view class="background"><image style="width:100%;" src="{{songPic}}"></image></view><view class="top"><view class="title">{{songs.name}}</view><view class="subtitle">{{songArtist.name}}</view></view><swiper data-event-opts="{{[['change',[['changeDot',['$event']]]]]}}" class="middle" style="height:280px;" bindchange="__e"><swiper-item class="middle-l" style="overflow:visible;"><view class="cd-wrapper"><view class="{{['cd',isPlay?'play':'']}}"><image class="{{['image',isPlay?'play':'']}}" src="{{songPic}}"></image></view></view></swiper-item><swiper-item class="middle-r"><scroll-view class="lyric-wrapper" scroll-y="{{true}}" scroll-into-view scroll-with-animation="{{true}}" scroll-top="{{marginTop}}"><block wx:if="{{showLyric}}"><view><block wx:for="{{showLyric}}" wx:for-item="item" wx:for-index="index" wx:key="time"><view class="{{['text',lyricIndex===index?'current':'']}}">{{''+item.text+''}}</view></block></view></block><block wx:else><view><view class="text current">暂无歌词</view></view></block></scroll-view></swiper-item></swiper><view class="dots-wrapper"><block wx:for="{{dotsArray}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><view class="{{['dots',currentDot==index?'current':'']}}"></view></block></view><view class="bottom"><view class="progress-wrapper"><text class="time time-l">{{currentTime}}</text><view class="progress-bar-wrapper"><slider value="{{precent}}" block-size="12" selected-color="#1989fa" data-event-opts="{{[['change',[['sliderChange',['$event']]]]]}}" bindchange="__e"></slider></view><text class="time time-r">{{duration}}</text></view><view class="operators"><view class="icon i-left"><image src="{{$root.m0}}" data-event-opts="{{[['tap',[['changeMod',['$event']]]]]}}" bindtap="__e"></image></view><view class="icon i-left"><image class="icon-pre" src="/static/icon/previous.png" data-event-opts="{{[['tap',[['prev',['$event']]]]]}}" bindtap="__e"></image></view><view class="icon i-center"><image src="/static/icon/stop.png" hidden="{{!isPlay}}" data-event-opts="{{[['tap',[['togglePlaying',['$event']]]]]}}" bindtap="__e"></image><image src="/static/icon/start.png" hidden="{{isPlay}}" data-event-opts="{{[['tap',[['togglePlaying',['$event']]]]]}}" bindtap="__e"></image></view><view class="icon i-right"><image class="icon-next" src="/static/icon/next.png" data-event-opts="{{[['tap',[['next',['$event']]]]]}}" bindtap="__e"></image></view><view data-event-opts="{{[['tap',[['openList',['$event']]]]]}}" class="icon i-right" bindtap="__e"><image class="icon-playlist" src="/static/icon/list.png"></image></view></view></view></view><view class="{{['content-wrapper',translateCls]}}"><view data-event-opts="{{[['tap',[['closeList',['$event']]]]]}}" class="close-list" bindtap="__e"></view><view class="play-content"><view class="plyer-list-title">播放队列</view><scroll-view class="playlist-wrapper" scroll-y="{{true}}"><block wx:if="{{songlist}}"><view><block wx:for="{{songlist}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="item" data-id="{{item.id}}" data-index="{{index}}" data-event-opts="{{[['tap',[['playthis',['$event']]]]]}}" bindtap="__e"><view class="name">{{item.name}}</view><view class="play_list__line">-</view><view class="singer">{{item.ar[0].name}}</view></view></block></view></block></scroll-view><view data-event-opts="{{[['tap',[['closeList',['$event']]]]]}}" class="close-playlist" bindtap="__e">关闭</view></view></view></view>