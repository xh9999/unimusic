page {
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.container .message {
  text-align: center;
}
.container .login {
  background-color: #000;
  padding: 0 30rpx;
  padding-bottom: 10rpx;
}
.container .login .item1 .img {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
}
.container .login .item1 .img image {
  width: 100%;
  height: 100%;
}
.container .login .item1 .icon {
  float: left;
  color: aliceblue;
  vertical-align: middle;
  padding: 12rpx 20rpx;
}
.container .login .left {
  float: left;
  color: #fff;
}
.container .login .left .icon {
  margin-left: 10rpx;
  display: inline-block;
  top: 10rpx;
  vertical-align: middle;
}
.container .login .right {
  float: right;
  padding: 8rpx 10rpx;
  text-align: center;
  border: solid 1px #ccc;
  border-radius: 25rpx;
  vertical-align: middle;
  color: aliceblue;
}
.container .swiper {
  height: 300rpx;
}
.container .swiper image {
  width: 100%;
  height: 100%;
}
.container .search {
  color: #fff;
}
.container .search .uni-searchbar {
  background-color: #000 !important;
}
.container .recommend {
  background-color: #222;
  display: flex;
  color: aliceblue;
}
.container .recommend .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 180rpx;
  text-align: center;
  font-size: 25rpx;
}
.container .recommend .item view {
  width: 50%;
  height: 50%;
  line-height: 90rpx;
  background-color: #292828;
  border-radius: 50%;
  margin-left: 50rpx;
  margin-top: 20rpx;
}
.container .recommend .item text {
  margin-top: 15rpx;
  height: 40%;
}
.container .scroll {
  overflow: hidden;
  height: 500rpx;
}
.container .scroll .hot {
  background-color: #000;
  color: aliceblue;
}
.container .scroll .hot .title {
  padding: 20rpx;
}
.container .scroll .hot .content {
  display: flex;
  flex-wrap: wrap;
  padding-left: 33rpx;
}
.container .scroll .hot .content .item {
  position: relative;
  width: 30%;
  height: 220rpx;
  box-sizing: border-box;
  background-color: #000;
  border-radius: 10rpx;
  margin-right: 23rpx;
  margin-bottom: 20rpx;
  background-size: cover;
}
.container .scroll .hot .content .item text {
  position: absolute;
  font-size: 24rpx;
  bottom: 10rpx;
  left: 20rpx;
}
